       /* ######## start:purchasing */
    :root {
        --bs-quotation: #FB3295;
    }

    [data-bs-theme=light] {
        --bs-quotation: #FB3295;
        --bs-quotation-inverse: #FFFFFF;
        --bs-quotation-rgb: rgb(251, 50, 149);
        --bs-text-quotation: #FB3295;
    }

    [data-bs-theme=dark] {
        --bs-quotation: #0085AD;
        --bs-quotation-inverse: #CDCDDE;
        --bs-quotation-rgb: rgb(0, 133, 173);
        --bs-text-quotation: #0085AD;
    }

    .text-bg-quotation {
        color: #FFFFFF !important;
        background-color: RGBA(145, 66, 58, var(--bs-bg-opacity, 1)) !important;
    }

    .btn.btn-bg-quotation {
        border-color: var(--bs-quotation);
        background-color: var(--bs-quotation);
    }

    .bg-quotation {
        --bs-bg-rgb-color: var(--bs-quotation-rgb);
        background-color: var(--bs-quotation) !important;
    }

    .svg-icon.svg-icon-quotation {
        color: var(--bs-text-quotation);
    }

    .text-quotation {
        color: var(--bs-text-quotation) !important;
    }

    .text-inverse-quotation {
        color: var(--bs-quotation-inverse) !important;
    }

    .text-hover-quotation {
        transition: color 0.2s ease;
    }

    .text-hover-quotation i {
        transition: color 0.2s ease;
    }

    .text-hover-quotation:hover {
        transition: color 0.2s ease;
        color: var(--bs-text-quotation) !important;
    }

    .text-hover-quotation:hover i {
        transition: color 0.2s ease;
        color: var(--bs-text-quotation) !important;
    }

    .text-hover-quotation:hover .svg-icon {
        color: var(--bs-text-quotation) !important;
    }

    .text-active-quotation {
        transition: color 0.2s ease;
    }

    .text-active-quotation i {
        transition: color 0.2s ease;
    }

    .text-active-quotation.active {
        transition: color 0.2s ease;
        color: var(--bs-text-quotation) !important;
    }

    .text-active-quotation.active i {
        transition: color 0.2s ease;
        color: var(--bs-text-quotation) !important;
    }

    .text-active-quotation.active .svg-icon {
        color: var(--bs-text-quotation) !important;
    }

    .border-quotation {
        border-color: var(--bs-quotation) !important;
    }

    .icon-quotation {
        line-height: 1;
        display: inline-block;
        font-style: normal;
        font-weight: 300;
        font-family: var(--fa-style-family-classic);
    }

    .icon-quotation::before {
        content: "\f51e";
    }

    .badge-quotation {
        color: var(--bs-quotation-inverse);
        background-color: var(--bs-quotation);
    }

    .badge-quotation.badge-outline {
        border: 1px solid var(--bs-quotation);
        color: var(--bs-quotation);
        background-color: transparent;
    }

    .badge-light-quotation {
        color: var(--bs-quotation);
        background-color: var(--bs-quotation-light);
    }

    .parent-hover .parent-hover-quotation {
        transition: color 0.2s ease;
    }

    .parent-hover:hover .parent-hover-quotation {
        transition: color 0.2s ease;
        color: var(--bs-text-quotation) !important;
    }

    /* ######## end:purchasing */

